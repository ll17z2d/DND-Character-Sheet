    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--<ToolBar Grid.Row="0" Grid.Column="0"
                 Grid.ColumnSpan="3"></ToolBar>-->

        <Menu Grid.Row="0" Grid.Column="0"
              Grid.ColumnSpan="5" ItemsSource="{Binding MenuCollection}">
            <MenuItem Header="File">
                <MenuItem Header="New" Command="{Binding NewCharacterCommand}"/>
                <MenuItem Header="Open" Command="{Binding OpenCharacterCommand}"/>
                <MenuItem Header="Save" Command="{Binding SaveCharacterCommand}"/>
                <MenuItem Header="Save As" Command="{Binding SaveCharacterAsCommand}"/>
                <!--<MenuItem Header="Exit" Command="{Binding ExitCommand}"/>-->
            </MenuItem>
            <MenuItem Header="View"/>
            <MenuItem Header="Options"/>
        </Menu>

        <!--<Ribbon Grid.Row="0" Grid.Column="0"
                Grid.ColumnSpan="5"></Ribbon>-->

        <Grid Grid.Row="1" Grid.Column="1">
            <uc:Main_Stats_Control/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2">
            <uc:HP___Misc_Stats_Control/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="2"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" FontSize="20"
                   HorizontalAlignment="Center">Search</Label>

            <Label Grid.Row="2" Grid.Column="1">Search Type:</Label>
            <ComboBox Grid.Row="2" Grid.Column="2" Margin="2"
                      Grid.ColumnSpan="2" ItemsSource="{Binding SearchTypesCollection, Mode=TwoWay}"
                      SelectedItem="{Binding SelectedSearchType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      ></ComboBox>

            <Label Grid.Row="3" Grid.Column="1">Search Term:</Label>
            <TextBox Grid.Row="3" Grid.Column="2" Margin="2"
                     Text="{Binding SearchTextbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Grid.Row="3" Grid.Column="3" Command="{Binding APISearchCommand}">Go</Button>

            <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"
                     Margin="2" IsReadOnly="True" Text="{Binding OutTextbox, Mode=TwoWay}"
                     HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"></TextBox>

        </Grid>

        <Grid Grid.Row="3" Grid.Column="1">
            <uc:QuickNotesControl/>
        </Grid>

        <DataGrid Grid.Row="2" Grid.Column="2" ItemsSource="{Binding Character.WeaponsInventory, Mode=TwoWay}"
                  ColumnWidth="*"/>

        <Grid Grid.Row="2" Grid.Column="3" Grid.RowSpan="2">
            <uc:Quick_Spells_Control/>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="1" Grid.Column="2"
                   Content="Skills" FontSize="20"/>

            <Label Grid.Row="2" Grid.Column="1"
                   Content="Search for skill here: "></Label>
            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding SkillTextbox, Mode=TwoWay}"/>
            <Button Grid.Row="2" Grid.Column="3" Command="{Binding SearchSkillsCommand}">Go</Button>
            <Border Grid.Row="3" Grid.Column="1"  BorderThickness="2" 
                    BorderBrush="NavajoWhite"
                    Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SearchedSkills, Mode=TwoWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="5"/>
                                    </Grid.RowDefinitions>

                                    <!--<Label Grid.Column="1" Grid.Row="0">IsProficient</Label>
                                    <Label Grid.Column="2" Grid.Row="0">Skill Name</Label>
                                    <Label Grid.Column="3" Grid.Row="0">Modifier</Label>-->
                                    <CheckBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" IsChecked="{Binding IsProficient}" IsHitTestVisible="False" Focusable="False"></CheckBox>
                                    <Label Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Content="{Binding Name}"/>
                                    <TextBox Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" Text="{Binding SkillScore}"/>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Button Grid.Row="3" Grid.Column="3" Command="{Binding OpenSkillsWindowCommand}"
                    Grid.RowSpan="2">
                <TextBlock Text="See All Skills" TextAlignment="Center"
                           TextWrapping="Wrap" Height="Auto"></TextBlock>
            </Button>
        </Grid>

        <!--<Label Grid.Row="3" Grid.Column="2">Could have a dice roller in this section where you pick the die size and then use it</Label>-->

        <Grid Grid.Row="3" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="1" Grid.Column="1" Content="Dice Roller"
                   Grid.ColumnSpan="3" HorizontalAlignment="Center"
                   FontSize="20"/>

            <ComboBox Grid.Row="2" Grid.Column="2" Margin="5"
                      ItemsSource="{Binding DiceCollection}"
                      SelectedItem="{Binding SelectedDice}"/>
            <Button Grid.Row="2" Grid.Column="3" Content="Roll" Margin="5"
                    Command="{Binding DiceRollCommand}"/>
            <Label Grid.Row="2" Grid.Column="1" Content="Dice Size"/>

            <Border Grid.Row="3" Grid.Column="2" BorderBrush="NavajoWhite"
                    Margin="5" BorderThickness="2">
                <Label Content="{Binding DiceResult}"
                       Foreground="NavajoWhite"
                       FontSize="20"
                       HorizontalAlignment="Center"/>
            </Border>

        </Grid>




