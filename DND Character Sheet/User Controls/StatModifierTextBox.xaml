<UserControl x:Class="DND_Character_Sheet.User_Controls.StatModifierTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DND_Character_Sheet.User_Controls"
             xmlns:validation="clr-namespace:DND_Character_Sheet.Styles.Validation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox>
        <TextBox.BindingGroup>
            <BindingGroup NotifyOnValidationError="True">
                <BindingGroup.ValidationRules>
                    <validation:Validate_Stat_Modifier></validation:Validate_Stat_Modifier>
                </BindingGroup.ValidationRules>
            </BindingGroup>
        </TextBox.BindingGroup>
    </TextBox>
</UserControl>
